<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.tracker.FoodIntakeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/glScroll"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/VitOffWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/VitDarkPurple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nutrient_calcium"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/VitOffWhite"
                        android:padding="10dp"
                        android:textSize="15sp"
                        android:minWidth="110dp" />

                    <ProgressBar
                        android:id="@+id/pbCalcium"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:progressTint="@color/VitYellow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/VitDarkPurple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nutrient_choline"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/VitOffWhite"
                        android:padding="10dp"
                        android:textSize="15sp"
                        android:minWidth="110dp" />

                    <ProgressBar
                        android:id="@+id/pbCholine"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:progressTint="@color/VitYellow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/VitDarkPurple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nutrient_fiber"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/VitOffWhite"
                        android:padding="10dp"
                        android:textSize="15sp"
                        android:minWidth="110dp" />

                    <ProgressBar
                        android:id="@+id/pbFiber"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:progressTint="@color/VitYellow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/VitDarkPurple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nutrient_iron"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/VitOffWhite"
                        android:padding="10dp"
                        android:textSize="15sp"
                        android:minWidth="110dp" />

                    <ProgressBar
                        android:id="@+id/pbIron"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:progressTint="@color/VitYellow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/VitDarkPurple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nutrient_magnesium"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/VitOffWhite"
                        android:padding="10dp"
                        android:textSize="15sp"
                        android:minWidth="110dp" />

                    <ProgressBar
                        android:id="@+id/pbMagnesium"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:progressTint="@color/VitYellow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/VitDarkPurple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nutrient_manganese"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/VitOffWhite"
                        android:padding="10dp"
                        android:textSize="15sp"
                        android:minWidth="110dp" />

                    <ProgressBar
                        android:id="@+id/pbManganese"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:progressTint="@color/VitYellow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/VitDarkPurple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nutrient_potassium"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/VitOffWhite"
                        android:padding="10dp"
                        android:textSize="15sp"
                        android:minWidth="110dp" />

                    <ProgressBar
                        android:id="@+id/pbPotassium"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:progressTint="@color/VitYellow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/VitDarkPurple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nutrient_selenium"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/VitOffWhite"
                        android:padding="10dp"
                        android:textSize="15sp"
                        android:minWidth="110dp" />

                    <ProgressBar
                        android:id="@+id/pbSelenium"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:progressTint="@color/VitYellow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/VitDarkPurple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nutrient_sodium"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/VitOffWhite"
                        android:padding="10dp"
                        android:textSize="15sp"
                        android:minWidth="110dp" />

                    <ProgressBar
                        android:id="@+id/pbSodium"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:progressTint="@color/VitYellow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/VitDarkPurple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nutrient_sugars"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/VitOffWhite"
                        android:padding="10dp"
                        android:textSize="15sp"
                        android:minWidth="110dp" />

                    <ProgressBar
                        android:id="@+id/pbSugars"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:progressTint="@color/VitYellow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/VitDarkPurple">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nutrient_zink"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/VitOffWhite"
                        android:padding="10dp"
                        android:textSize="15sp"
                        android:minWidth="110dp" />

                    <ProgressBar
                        android:id="@+id/pbZink"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:progressTint="@color/VitYellow" />
                </LinearLayout>



            </LinearLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="409dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glImportant_nutrients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="558dp" />

        <Button
            android:id="@+id/btnRecalibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/VitYellow"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/tracker_recalibrate"
            android:textColor="@color/black"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/glImportant_nutrients"
            app:layout_constraintBottom_toTopOf="@id/btnProgress"/>

        <Button
            android:id="@+id/btnProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/VitYellow"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/tracker_progress"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnRecalibrate" />

        <LinearLayout
            android:id="@+id/llCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/glScroll"
            app:layout_constraintBottom_toTopOf="@id/glImportant_nutrients"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/llFat"
            android:orientation="vertical"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/pbCalories"
                style="@android:style/Widget.Holo.Light.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/VitDarkPurple"
                android:max="100"
                android:progress="40"
                android:progressBackgroundTint="@color/VitDarkPurple"
                android:progressBackgroundTintMode="src_over"
                android:progressTint="@color/VitYellow" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nutrient_calories" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/glScroll"
            app:layout_constraintBottom_toTopOf="@id/glImportant_nutrients"
            app:layout_constraintLeft_toRightOf="@id/llCalories"
            app:layout_constraintRight_toLeftOf="@id/llProtein"
            android:orientation="vertical"
            android:gravity="center">
            <ProgressBar
                android:id="@+id/pbFat"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="@color/VitYellow" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nutrient_fat" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llProtein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/glScroll"
            app:layout_constraintBottom_toTopOf="@id/glImportant_nutrients"
            app:layout_constraintLeft_toRightOf="@id/llFat"
            app:layout_constraintRight_toLeftOf="@id/llCarbohydrate"
            android:orientation="vertical"
            android:gravity="center">
            <ProgressBar
                android:id="@+id/pbProtein"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="@color/VitYellow" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nutrient_protein" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCarbohydrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/glScroll"
            app:layout_constraintBottom_toTopOf="@id/glImportant_nutrients"
            app:layout_constraintLeft_toRightOf="@id/llProtein"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:gravity="center">
            <ProgressBar
                android:id="@+id/pbCarbohydrate"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="@color/VitYellow" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nutrient_carbohydrate" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:backgroundTint="@color/VitYellow"
        android:src="@mipmap/outline_add_black_24" />

</FrameLayout>